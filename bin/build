#!/usr/bin/env node
fs = require('fs-extra');
path = require('path')

// basepath
basePath = path.resolve(__dirname + '/..');

// font-awesome
fs.remove(basePath + '/public/vendor/fontawesome', (err) => {
    if (err) {
        return console.log(err)
    }
    fs.mkdirp(basePath + '/public/vendor/fontawesome');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/css' , basePath + '/public/vendor/fontawesome/css');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/js' , basePath + '/public/vendor/fontawesome/js');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/webfonts' , basePath + '/public/vendor/fontawesome/webfonts');
});

// bootstrap
fs.remove(basePath + '/public/vendor/bootstrap', (err) => {
    if (err) {
        console.log(err)
    }
    fs.mkdirp(basePath + '/public/vendor/bootstrap');
    fs.copy(basePath + '/node_modules/bootstrap/dist/css/bootstrap.min.css' , basePath + '/public/vendor/bootstrap/bootstrap.min.css');
    fs.copy(basePath + '/node_modules/bootstrap/dist/css/bootstrap.min.css.map' , basePath + '/public/vendor/bootstrap/bootstrap.min.css.map');
    fs.copy(basePath + '/node_modules/bootstrap/dist/js/bootstrap.min.js' , basePath + '/public/vendor/bootstrap/bootstrap.min.js');
    fs.copy(basePath + '/node_modules/bootstrap/dist/js/bootstrap.min.js.map' , basePath + '/public/vendor/bootstrap/bootstrap.min.js.map');
});

// jquery
fs.remove(basePath + '/public/vendor/jquery', (err) => {
    if (err) {
        console.log(err)
    }
    fs.mkdirp(basePath + '/public/vendor/jquery');
    fs.copy(basePath + '/node_modules/jquery/dist/jquery.min.js' , basePath + '/public/vendor/jquery/jquery.min.js');
});
// popper
fs.remove(basePath + '/public/vendor/popper', (err) => {
    if (err) {
        console.log(err)
    }
    fs.mkdirp(basePath + '/public/vendor/popper');
    fs.copy(basePath + '/node_modules/popper.js/dist/umd/popper.min.js' , basePath + '/public/vendor/popper/popper.min.js');
    fs.copy(basePath + '/node_modules/popper.js/dist/umd/popper.min.js.map' , basePath + '/public/vendor/popper/popper.min.js.map');
});
