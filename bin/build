#!/usr/bin/env node
fs = require('fs-extra');
path = require('path')

// basepath
basePath = path.resolve(__dirname + '/..');

// font-awesome
fs.remove(basePath + '/public/vendor/fontawesome', (err) => {
    if (err) {
        return console.log(err)
    }
    fs.mkdirp(basePath + '/public/vendor/fontawesome');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/css' , basePath + '/public/vendor/fontawesome/css');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/js' , basePath + '/public/vendor/fontawesome/js');
    fs.copy(basePath + '/node_modules/@fortawesome/fontawesome-free/webfonts' , basePath + '/public/vendor/fontawesome/webfonts');
});