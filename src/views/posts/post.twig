{% extends "layout.twig" %}

{% block content %}
    <div class="blog-post">
        <h2 class="blog-post-title">{{post.title}}</h2>
        <span class="blog-post-meta">{{post.fromNow}} by <span class="author">{{post.author}}</span></span>

        <div class="blog-post-summary mb-4 mt-4">
            {{post.summary}}
        </div>

        <div class="blog-post-content">
            {{post.content}}
        </div>
        
    </div>
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@10.0.0/build/styles/default.min.css">
{% endblock %}

{% block scripts %}

    <script src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@10.0.0/build/highlight.min.js"></script>
    <script>
        hljs.initHighlightingOnLoad()
    </script>
{% endblock %}